<p id="notice"><%= notice %></p>

<h1>Credit Purchases</h1>

<table>
  <thead>
    <tr>
      <th>Stock description</th>
      <th>Creditor name</th>
      <th>User</th>
      <th>Amount</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_purchases.each do |credit_purchase| %>
      <tr>
        <td><%= credit_purchase.stock_description %></td>
        <td><%= credit_purchase.creditor_name %></td>
        <td><%= credit_purchase.user_id %></td>
        <td><%= credit_purchase.amount %></td>
        <td><%= credit_purchase.image %></td>
        <td><%= link_to 'Show', credit_purchase %></td>
        <td><%= link_to 'Edit', edit_credit_purchase_path(credit_purchase) %></td>
        <td><%= link_to 'Destroy', credit_purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

